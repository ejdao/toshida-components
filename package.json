{
  "name": "@toshida/utilities",
  "version": "0.0.0-testing",
  "license": "MIT",
  "author": "ejdao",
  "main": "dist/index.js",
  "module": "dist/utilities.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "assets"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/utilities.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/utilities.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@tsconfig/recommended": "^1.0.10",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "size-limit": "^11.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
